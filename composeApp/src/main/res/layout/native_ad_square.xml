<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/nativeAdContainer"

    android:background="@android:color/white">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <!-- Main vertical container -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <!-- Top row (icon + text) -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="8dp">
               <!-- Icon -->
               <ImageView
                   android:id="@+id/ad_icon"
                   android:layout_width="48dp"
                   android:layout_height="48dp" />

               <!-- Text container -->
               <LinearLayout
                   android:id="@+id/container_text"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:paddingStart="8dp">

                   <TextView
                       android:id="@+id/ad_headline"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:textStyle="bold"/>

                   <TextView
                       android:id="@+id/ad_body"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:maxLines="2"/>
               </LinearLayout>
           </LinearLayout>

           <!-- Media content -->
           <!-- Media Container - MUST use these exact parameters -->

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <!-- MediaView must be first child -->
               <com.google.android.gms.ads.nativead.MediaView
                   android:id="@+id/ad_media"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:visibility="gone"/>

               <!-- ImageView must match parent exactly -->
               <ImageView
                   android:id="@+id/ad_image"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:visibility="gone"
                   />
           </FrameLayout>
           <!-- Action button -->
           <Button
               android:id="@+id/ad_actionbutton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:background="@drawable/nativead_button"/>

       </LinearLayout>

       <!-- Ad badge (positioned absolutely would need FrameLayout) -->
       <TextView
           android:id="@+id/adBadge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingHorizontal="16dp"
           android:paddingVertical="4dp"
           android:text="ad"
           android:layout_gravity="end"
           android:background="@drawable/nativead_adtext_background"/>
   </FrameLayout>
</com.google.android.gms.ads.nativead.NativeAdView>